#!/usr/bin/env ruby

pwd=Dir.getwd
Dir.chdir(File.join(File.dirname(__FILE__), ".."))
root = Dir.getwd
Dir.chdir(pwd)
puts "root: #{root}"

cmd = "java -Duser.timezone='US/Eastern' -Dfile.encoding=utf-8 -jar '#{root}/lib/rhino/js.jar' '#{root}/lib/envjasmine.js' --environment='UNIX' --rootDir='#{root}' #{ARGV.join(' ')}"

puts "cmd: #{cmd}"
exit(system(cmd))
